# Server
PORT=3000
NODE_ENV=development

# Database (SQLite - path relative to backend/)
DATABASE_URL="file:./prisma/dev.db"

# Redis (required for job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# JWT Authentication
JWT_SECRET=change-this-to-a-secure-random-string

# File Watcher (optional - auto-import new files)
FILE_WATCHER_ENABLED=false

# Configuration file path (optional - defaults to tubeca.config.json in repo root)
# TUBECA_CONFIG_PATH=/path/to/tubeca.config.json
